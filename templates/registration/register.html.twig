{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="plein" style="background-image: url('{{ asset('bundles/easyadmin/images/site/percer.jpg') }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 100%;
    height: 100vh;">
        <div class="container">
            <h1>Inscription</h1>
            <div class="dispFlex">
                <div id="formRegister">
                    {{ form_errors(registrationForm) }}
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.prenom, {
                            label: 'Prénom'
                        }) }}
                        {{ form_row(registrationForm.nom, {
                            label: 'Nom'
                        }) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                        <button type="submit" class="btn btn-info">S'enregistrer</button>
                    {{ form_end(registrationForm) }}
                </div>
                <div id="offre">
                    <h2 class="big">Offre spéciale </br>pour toute nouvelle inscription</h2>
                    <p class="big">Recevez 50 points !</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
